  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest --config vite/vitest.config.ts",
    "test:watch": "vitest --config vite/vitest.config.ts --watch --coverage",
    "generate:pwa-assets": "pwa-assets-generator --preset minimal public/logo.svg",
    "check-types": "tsc --noEmit",
    "dev": "vite --config vite/dev.config.ts --clearScreen false",
    "build": "tsc && vite build --config vite/prod.config.ts",
    "preview": "vite preview --config vite/dev.config.ts"
  },
  "dependencies": {
    "@repo/core-game": "workspace:*",
    "@repo/ui": "workspace:*",
    "colyseus.js": "catalog:",
    "phaser": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "postcss": "catalog:",
    "tailwindcss": "catalog:",
    "terser": "^5.39.0",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "catalog:"
  }
}
