{
  "name": "web",
  "version": "0.0.1",
  "author": "Andrew Steinheiser <me@iamandrew.io>",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "check-types": "tsc --noEmit",
    "dev": "vite --config vite/dev.config.ts --clearScreen false",
    "build": "tsc && vite build --config vite/prod.config.ts",
    "preview": "vite preview --config vite/dev.config.ts --port 4200",
    "generate:pwa-assets": "pwa-assets-generator --preset minimal public/logo.svg",
    "test:unit": "vitest --config vite/vitest.config.ts"
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "phaser": "^3.88.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.4",
    "terser": "^5.39.0",
    "typescript": "5.5.4",
    "vite": "^5.1.4",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.1.2"
  }
}
