{
  "name": "demo-game",
  "description": "Desktop app for the TS Online Game Template",
  "version": "0.0.1",
  "repository": "https://github.com/asteinheiser/ts-online-game-template",
  "homepage": "https://ts-game.online",
  "author": "Andrew Steinheiser <me@iamandrew.io>",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "./dist/main/index.js",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "test:watch": "vitest --watch --coverage",
    "generate:gql-types": "graphql-codegen",
    "generate:gql-types:watch": "graphql-codegen --watch",
    "generate:app-icons": "sleep 0.1 && cp ../web/public/pwa-512x512.png ./resources/icon.png && cp ../web/public/pwa-512x512.png ./build/icon.png",
    "check-types": "tsc --build",
    "dev": "electron-vite dev",
    "preview": "electron-vite preview",
    "build": "electron-vite build",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@apollo/client": "catalog:",
    "@react-three/drei": "catalog:",
    "@react-three/fiber": "catalog:",
    "@repo/client-auth": "workspace:*",
    "@repo/core-game": "workspace:*",
    "@repo/ui": "workspace:*",
    "colyseus.js": "catalog:",
    "electron-updater": "^6.7.3",
    "graphql": "catalog:",
    "phaser": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-router-dom": "catalog:",
    "rxjs": "catalog:",
    "three": "catalog:"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron-toolkit/utils": "^4.0.0",
    "@graphql-codegen/cli": "catalog:",
    "@graphql-typed-document-node/core": "catalog:",
    "@parcel/watcher": "catalog:",
    "@repo/eslint-config": "workspace:*",
    "@tailwindcss/vite": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/three": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "electron": "catalog:",
    "electron-builder": "^26.4.0",
    "electron-vite": "^5.0.0",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
