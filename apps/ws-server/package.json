{
  "name": "ws-server",
  "version": "0.0.1",
  "author": "Andrew Steinheiser <me@iamandrew.io>",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "check-types": "tsc --noEmit",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && vite build",
    "start": "node dist/index.js",
    "preview": "npm run start",
    "test:unit": "mocha --config test/.mocharc.yaml",
    "test:unit:watch": "nodemon --ext ts --exec \"c8 --config test/.c8rc.json mocha --config test/.mocharc.yaml\"",
    "test:load": "tsx test/load/test.ts --room my_room --numClients 2 --endpoint ws://localhost:4204"
  },
  "devDependencies": {
    "@colyseus/loadtest": "^0.16.1",
    "@colyseus/testing": "^0.16.3",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/express": "catalog:",
    "@types/mocha": "^10.0.10",
    "c8": "^10.1.3",
    "colyseus.js": "catalog:",
    "mocha": "^11.2.2",
    "nodemon": "^3.1.10",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:"
  },
  "dependencies": {
    "@colyseus/core": "^0.16.17",
    "@colyseus/monitor": "^0.16.7",
    "@colyseus/playground": "^0.16.4",
    "@colyseus/schema": "^3.0.35",
    "@colyseus/tools": "^0.16.8",
    "@repo/core-game": "workspace:*",
    "colyseus": "catalog:",
    "express": "catalog:",
    "nanoid": "catalog:"
  }
}
