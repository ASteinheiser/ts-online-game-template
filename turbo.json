{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "concurrency": "15",
  "tasks": {
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:load": {
      "with": ["game-server#preview"],
      "cache": false,
      "persistent": true
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "generate:gql-types": {
      "inputs": ["$TURBO_DEFAULT$", "../../apps/game-server/src/graphql/schema.graphql"],
      "outputs": ["**/graphql/generated-types/**", "**/graphql/generated-types.ts"]
    },
    "generate:gql-types:watch": {
      "cache": false,
      "persistent": true
    },
    "ci:all-checks": {
      "dependsOn": ["generate:gql-types", "check-types", "lint", "test"]
    },
    "db:start": {
      "cache": false
    },
    "db:stop": {
      "cache": false
    },
    "db:sync": {
      "dependsOn": ["db:start"],
      "cache": false,
      "interactive": true
    },
    "dev": {
      "with": ["generate:gql-types:watch"],
      "cache": false,
      "persistent": true
    },
    "generate:pwa-assets": {
      "inputs": ["public/logo.svg"],
      "outputs": ["public/favicon.ico", "public/*.png"]
    },
    "generate:app-icons": {
      "dependsOn": ["generate:pwa-assets"],
      "inputs": ["../../apps/web/public/logo.svg"],
      "outputs": ["build/icon.png", "resources/icon.png"]
    },
    "build": {
      "dependsOn": ["^build", "generate:app-icons", "ci:all-checks"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "build:win": {
      "dependsOn": ["electron#build"],
      "outputs": ["dist/**"]
    },
    "build:mac": {
      "dependsOn": ["electron#build"],
      "outputs": ["dist/**"]
    },
    "build:linux": {
      "dependsOn": ["electron#build"],
      "outputs": ["dist/**"]
    }
  }
}
