{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "test:unit": {},
    "test:unit:watch": {
      "cache": false,
      "persistent": true
    },
    "test:load": {
      "with": ["ws-server#preview"],
      "cache": false,
      "persistent": true
    },
    "generate:pwa-assets": {
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "preview": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "ci:all-checks": {
      "dependsOn": ["lint", "check-types", "test:unit"]
    },
    "build:win": {
      "dependsOn": ["electron#build"],
      "outputs": ["dist/**"]
    },
    "build:mac": {
      "dependsOn": ["electron#build"],
      "outputs": ["dist/**"]
    },
    "build:linux": {
      "dependsOn": ["electron#build"],
      "outputs": ["dist/**"]
    }
  }
}
