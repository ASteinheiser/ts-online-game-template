{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "concurrency": "15",
  "tasks": {
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:load": {
      "with": ["game-server#preview"],
      "cache": false,
      "persistent": true
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "generate:gql-types": {},
    "generate:gql-types:watch": {
      "cache": false,
      "persistent": true
    },
    "ci:all-checks": {
      "dependsOn": ["lint", "generate:gql-types", "check-types", "test"]
    },
    "db:start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "with": ["generate:gql-types:watch", "db:start"],
      "cache": false,
      "persistent": true
    },
    "generate:pwa-assets": {
      "cache": false
    },
    "generate:app-icons": {
      "dependsOn": ["generate:pwa-assets"],
      "cache": false
    },
    "build": {
      "dependsOn": ["generate:app-icons", "ci:all-checks", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "preview": {
      "dependsOn": ["build"],
      "with": ["db:start"],
      "cache": false,
      "persistent": true
    },
    "build:win": {
      "dependsOn": ["electron#build"],
      "outputs": ["dist/**"]
    },
    "build:mac": {
      "dependsOn": ["electron#build"],
      "outputs": ["dist/**"]
    },
    "build:linux": {
      "dependsOn": ["electron#build"],
      "outputs": ["dist/**"]
    }
  }
}
